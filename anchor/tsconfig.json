{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["jest", "node"],
    "typeRoots": ["../node_modules/@types", "./node_modules/@types"],
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "tests/**/*",
    "target/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}